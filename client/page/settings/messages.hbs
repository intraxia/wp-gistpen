<div class="table" data-brk-container="settingsMessages">
    <h3 class="title">Runs for {{route.parts.run}} Run</h3>
    <p><strong>Current Status: {{run.status}}</strong></p>
    <p><a href="{{link "wpgp_route" (join "jobs" run.job "/")}}">&larr; back</a></p>

    <table class="widefat striped">
        <thead>
        <tr>
            <th>Message ID</th>
            <th>Message Text</th>
            <th>Message Level</th>
            <th>Message Log Time</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <th>Message ID</th>
            <th>Message Text</th>
            <th>Message Level</th>
            <th>Message Log Time</th>
        </tr>
        </tfoot>
        <tbody>
        {{#each run.messages}}
            <tr>
                <td>{{ID}}</td>
                <td>{{text}}</td>
                <td>{{level}}</td>
                <td>{{logged_at}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
